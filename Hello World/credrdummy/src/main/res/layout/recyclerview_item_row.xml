<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_bike_icon"
              />


            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toRightOf="@id/ivItemImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vehical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:text="vehicle name"
                    android:lineSpacingExtra="3sp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                  />

                    <TextView
                        android:text="vehicle number"
                        android:textAllCaps="true"
                        android:id="@+id/tvBikeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp"

                        />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Store name"
                        android:layout_toStartOf="@+id/imv_location"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:id="@+id/tv_storename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp"
                     />
                <ImageView
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_location"
                    android:id="@+id/imv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                </RelativeLayout>
                <TextView
                    android:text="Request date"
                    android:id="@+id/tv_requested_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:gravity="center_horizontal"
                    />


             <!--   <Button
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btnAssign"
                    android:layout_gravity="center"
                    android:text="ASSIGN RUNNER"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp"
                    android:background="@drawable/selector_filled_rounded_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Button>-->

            </LinearLayout>
            <TextView
                android:paddingVertical="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_below="@+id/llName"
                android:layout_centerInParent="true"
                android:id="@+id/btnAssign"
                android:gravity="center"
                android:text="ASSIGN RUNNER"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14sp"
                android:background="@drawable/selector_filled_rounded_red"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                Tools:targetApi="o">

            </TextView>


        </RelativeLayout>

</android.support.v7.widget.CardView>
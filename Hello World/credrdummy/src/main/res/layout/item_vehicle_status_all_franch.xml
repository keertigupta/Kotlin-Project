<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bike_placeholder" />

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toRightOf="@id/ivItemImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/notavailable"
                    android:textSize="@dimen/size_20sp"
                    Tools:text="Delivered" />

                <TextView
                    android:id="@+id/tvBikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_14sp"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:letterSpacing="0.05"
                    Tools:text="Suzuki Access 125Z"
                   />

                <TextView
                    android:id="@+id/tvBikeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_12sp"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="10dp"
                    android:text="@string/notavailable" />


                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_12sp"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.05"
                    Tools:text="Vista Motors Kalyan Nagar" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imExchangeDate"
                        android:layout_width="@dimen/margin_12dp"
                        android:layout_height="@dimen/margin_12dp"
                        android:layout_gravity="left"
                        android:src="@drawable/tc_round_gray" />


                    <TextView
                        android:id="@+id/tvExchangeDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imExchangeDate"
                        android:gravity="start"
                        android:text="Request Date"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/tvExchangeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvExchangeDateLabel"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imExchangeDate"
                        android:gravity="start"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold"
                        android:text="@string/notavailable" />


                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/imExchangeDate"
                        android:layout_gravity="start"
                        android:layout_marginStart="6dp"
                        android:background="@color/green" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imPickedUpDate"
                        android:layout_width="@dimen/margin_12dp"
                        android:layout_height="@dimen/margin_12dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_round_yellow" />


                    <TextView
                        android:id="@+id/tvPickedUpDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imPickedUpDate"
                        android:gravity="start"
                        android:text="PickUp"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:text="Not Available"
                        android:id="@+id/tvPickedUpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPickedUpDateLabel"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imPickedUpDate"
                        android:gravity="start"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold"
                         />


                    <View
                        android:visibility="visible"
                        android:layout_width="0.5dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/imPickedUpDate"
                        android:layout_gravity="start"
                        android:layout_marginLeft="6dp"
                        android:background="@color/green" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/imDeliveryDatelayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imDeliveryDate"
                        android:layout_width="@dimen/margin_12dp"
                        android:layout_height="@dimen/margin_12dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_round_green" />


                    <TextView
                        android:id="@+id/tvDeliveryDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imDeliveryDate"
                        android:gravity="start"
                        android:text="Delivered"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/tvDeliveryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDeliveryDateLabel"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/imDeliveryDate"
                        android:gravity="left"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold"
                        android:text="@string/notavailable" />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:id="@+id/containerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_runner_icon" />


            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tvRunnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Assigned Runner : Not Available"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/call"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/call" />

        </RelativeLayout >


    </LinearLayout>
</android.support.v7.widget.CardView>